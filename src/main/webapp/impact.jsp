    <!-- Stories of Impact Section -->
    <section class="impact-stories impact-page">
        <div class="container">
            <h3>Stories of Impact</h3>
            <div class="testimonials-grid">
                <div class="testimonial">
                    <img src="images/team-3.jpg" alt="Testimonial 1"> <!-- Replace with image -->
